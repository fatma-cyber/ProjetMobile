<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nom du plat -->
        <TextView
            android:id="@+id/txtMenuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du plat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"/>

        <!-- Description -->
        <TextView
            android:id="@+id/txtMenuDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description du plat"
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_marginTop="4dp"/>

        <!-- Prix -->
        <TextView
            android:id="@+id/txtMenuPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:textSize="16sp"
            android:textColor="#FF6F00"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Bouton RÃ©server -->
        <Button
            android:id="@+id/btnReserver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ½ï¸ RÃ©server ce plat"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="12dp"
            android:padding="12dp"/>
        <!-- Bouton Voir les avis -->
        <Button
            android:id="@+id/btnVoirAvis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â­ Voir les avis"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="8dp"
            android:padding="12dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>